<!doctype html>
<html>
	<% include ./partials/templates/head.ejs %>
	<body>
		<div class="container">
			<div class="col-sm-6 col-sm-offset-3">

				<h1><span class="fa fa-sign-in"></span>Request Reset</h1>

				<% if (message.length > 0) { %>
					<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<!-- LOGIN FORM -->
				<form action="/forgot" method="post">
					<div class="form-group">
						<label>Email</label>
						
						<input type="text" class="form-control" name="email">
						<input type="hidden" class="form-control" name="password" value="password">
					</div>    
					<button type="submit" class="btn btn-warning btn-lg">Request</button>
				</form>

				<hr>
					<a href="/" class="btn btn-default"><span class="signup"></span> Home </a>
					<a href="/login" class="btn btn-default"><span class="reset-user"></span> Login </a>
					<a href="/signup" class="btn btn-default"><span class="signup-user"></span> Signup </a>
					
				<hr>	
					<%include ./partials/templates/footer.ejs %>
			</div>
		</div>
		<%include ./partials/templates/reload.ejs %>
	</body>

</html>
