<!doctype html>
<html>
<% include ./partials/templates/head.ejs %>
<body>
<div class="container">


    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
						<strong>User name</strong>: <%= user.username %><br>
                        <strong>E-mail</strong>: <%= user.email %><br>                        
						<strong>Type</strong>: <%= user.type %><br>
						<strong>Permissions</strong>: <%= user.permissions %>
                    </p>
                    
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
					
                <% } %>
				<a href="test/openaccess" class="btn btn-default">testaccess</a>

            </div>
        </div>      
    </div>       


</div>
<% include ./partials/templates/reload.ejs %>
</body>
</html>
